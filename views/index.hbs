<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KCC Calculator</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>

    <style>
        .container {
            height: 100vh;
            width: 100%;
        }

        .calc_title {
            text-align: center;
            padding: 20px;
            margin-bottom: 10px;
        }

        .calc_title span {
            border: 2px solid rgb(127, 1, 1);
            padding: 5px 15px;
            font-size: 20px;
            font-weight: 700;
        }

        .calc_body {
            text-align: center;
        }

        .calc_body label {
            font-size: 18px;
            font-weight: 600;
        }

        button {
            margin-right: 5px;
            cursor: pointer;
        }
    </style>

    <div class="container">
        <div class="calc">
            <div class="calc_title"><span>KCC CALCULATOR</span></div>
            <form action="" method="post">
                <div class="calc_body">
                    <label for="num1">Num 1 : </label> <input type="number" class="num1" id="num1" name="num1"><br><br>
                    <label for="num2">Num 2 : </label> <input type="number" class="num2" id="num2" name="num2"><br><br>
                    <button class="add" id="add">ADD</button>
                    <button class="sub" id="sub">SUBTRACT</button>
                    <button class="mul" id="mul">MULTIPLY</button>

                    <div class="answer">
                        <h2>Answer : {{total}}</h2>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            $("#add").click(function (event) {
                event.preventDefault();
                var x = $(".num1").val();
                var y = $(".num2").val();
                $.post({ url: "/add", data: { a: x, b: y } }).then((data) => {
                });
            });
        });

        $("#sub").click(function (event) {
            event.preventDefault();
            $.post({ url: "/sub", data: { a: $(".num1").val(), b: $(".num2").val() } });
        });

        $("#mul").click(function (event) {
            event.preventDefault();
            $.post({ url: "/mul", data: { a: $(".num1").val(), b: $(".num2").val() } });
        });
    </script>

</body>

</html>
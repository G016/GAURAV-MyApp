<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KCC Calculator</title>
</head>

<body>

    <style>
        .container{
            height: 100vh;
            width: 100%;
        }
        .calc_title{
            text-align: center;
            padding-bottom: 20px;
            font-size: 20px;
            font-weight: 700;
        }
        .calc_body{
            text-align: center;
        }
        .calc_body label{
            font-size: 18px;
            font-weight: 600;
        }
    </style>

    <div class="container">
        <div class="calc">
            <div class="calc_title">KCC CALCULATOR</div>
            <div class="calc_body">
                <label for="num1">Num 1 :</label> <input type="number" class="num1" id="num1" value="22"><br><br>
                <label for="num2">Num 2 :</label> <input type="number" class="num2" id="num2" value="10"><br><br>
                <button class="add" onclick="addNum()">ADD</button>
                <button class="sub" onclick="subNum()">SUBTRACT</button>
                <button class="mul" onclick="multNum()">MULTIPLY</button>

                <h2 class="answer">Answer : </h2>
            </div>
        </div>
    </div>

    <script>
        var num1 = document.getElementById("num1");
        var num2 = document.getElementById("num2");
        var answer = document.getElementsByClassName("answer");
        function addNum() {
            var x = parseInt(num1.value);
            var y = parseInt(num2.value);
            var total = x + y;
            console.log(total);
            answer[0].innerText = "Answer : " + total;
        }
        function subNum() {
            var x = parseInt(num1.value);
            var y = parseInt(num2.value);
            var total = x - y;
            answer[0].innerText = "Answer : " + total;
        }
        function multNum() {
            var x = parseInt(num1.value);
            var y = parseInt(num2.value);
            var total = x * y;
            answer[0].innerText = "Answer : " + total;
        }
    </script>

</body>

</html>